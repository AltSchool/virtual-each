<button {{action 'selected' 'people'}}>People</button>
<button {{action 'selected' 'countries'}}>Countries</button>
<div>
  <button {{action 'grow'}}>Grow</button>
  <button {{action 'shrink'}}>Shrink</button>
  <div>
    <input
      value={{scrollTimeout}}
      placeholder='Scroll Debounce Timeout (ms)'
      oninput={{action "setScrollTimeout" value="target.value"}}
    />
  </div>
  <div>
    <input
      value={{positionIndex}}
      placeholder='Scroll to position (number)'
      oninput={{action "setPositionIndex" value="target.value"}}
    />
  </div>
</div>

{{component componentName
  items=currentModel
  height=height
  positionIndex=positionIndex
  scrollTimeout=scrollTimeout}}
